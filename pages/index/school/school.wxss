.slide-image{
  width: 100%;
  height: 800rpx;
}
.item-view{
  margin: 15rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  position:relative;
}
.item-view .item-text1{
  font-size: 14pt;
}
.item-view .item-text2{
  border-left: 2px solid #999;
  margin-left:5px;
  padding-left: 25px; 
  font-size: 12pt;
  color: #333;
}
.item-view image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.hr{
  clear: left;
  width: 90%;
  height: 3rpx;
  margin: 5rpx 20rpx;
  background-color: #d4237a;
  border-radius: 4px;
}
.item-view-head{
  clear: left;
  background-color: #eee;
}
.zy-class{
  float: left;
  background-color: #FFCE44;
  font-size: 28rpx;
  font-weight:900;
  color: #fff;
  margin: 10rpx 20rpx;
  padding: 5rpx 15rpx;
  border-radius: 10rpx;
}
.min{
   font-size: 5pt;
}

/**名师/评论.wxss**/  
.swiper-tab{  
    width: 100%;  
    border-bottom: 2rpx solid #777777;  
    text-align: center;  
    line-height: 80rpx;}  
.swiper-tab-list{  font-size: 30rpx;  
    display: inline-block;  
    width: 33.33%;  
    color: #777777;  
}  
.on{ color: #d4237a;  
    border-bottom: 5rpx solid #d4237a;}  
  
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }  
.swiper-box view{  
    text-align: left;  
}

.body-item{
  float: left;
  text-align: center;
  width: 33.33%;
  margin: 10rpx 0;
  position:relative;
}
.body-item image{
  transition: all 350ms;
  transform:scale(1);
  width: 95%;
  height: 236rpx;

}
.body-item-hover image{
 transform:scale(1.1);
}
.rigth{
  position: absolute;
  right: 15rpx;
}
.comment-text{
  font-size: 10pt;
}
.view-border{
  border-radius: 10rpx;
  border: 1px solid #d4237a
}
.comment-content{
  text-align: left;
  margin: 10rpx;
}
.comment-view{
  margin: 10rpx;
}
.hhr{
  background-color: #EEEEEE;
}